{
  "name": "compi-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development next dev --turbopack --port=3001",
    "build": "NODE_ENV=test next build",
    "start": "next start",
    "tsc": "tsc",
    "lint": "next lint",
    "tw": "tsc --watch",
    "svgr": "npx @svgr/cli ./src/assets/icons -d src/components/icons --typescript --icon --svg-props \"width=24,height=24\" --no-prettier && npm run fix:all",
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint:fix": "cd \"./src/\" && eslint \"**/*.{ts,tsx}\" --fix && cd ..",
    "fix:all": "npm run format && npm run lint:fix",
    "precommit": "lint-staged && npm run tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@svgr/cli": "8.1.0",
    "@svgr/webpack": "8.1.0",
    "class-variance-authority": "0.7.1",
    "embla-carousel-react": "^8.6.0",
    "i18next": "^25.3.2",
    "motion": "^12.23.0",
    "next": "15.3.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-fast-marquee": "^1.6.5",
    "react-i18next": "15.6.0"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.9",
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "4.1.11",
    "@types/node": "20.19.2",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "clsx": "2.1.1",
    "eslint": "9.30.0",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.13",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "1.3.5",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,json}": [
      "node_modules/.bin/prettier --write",
      "eslint --fix"
    ]
  }
}
